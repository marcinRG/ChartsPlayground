{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom", "es2015.promise"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react"
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
